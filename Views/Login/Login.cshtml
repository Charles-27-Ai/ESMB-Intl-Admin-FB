@model ESMB_Intl_Admin_FB.Models.Author
@*@model ESMB_Intl_Admin_FB.ViewModels.LoginViewModel*@

@{
    ViewBag.Title = "Login";
}

    <div class="login-register">
        <div class="login-box card" style="opacity: 0.9;">
            <div class="card-body text-center">

                @using (Html.BeginForm("Authorize", "Login", FormMethod.Post,
                                  new { @class = "form-horizontal form-material", @id = "loginform" }))
                {
                    @*<h3 class="box-title m-b-20">Admin Login</h3>*@
                    <img src="../App_Files/Backgrounds/EMSB-intl-logo.png" class="img-fluid my-1" style="width: 100px; height: auto"/>
                    <div class="form-group mt-2">
                        <div class="col-xs-12">
                            @{
                                var userCookie = Request.Cookies["userCode"];
                                if (userCookie != null)
                                {
                                    @Html.TextBoxFor(model => model.AuthorCode, new {@Value = @userCookie.Value , @class = "form-control mx-3"})
                                }
                                else
                                {
                                    @Html.EditorFor(model => model.AuthorCode, new {htmlAttributes = new {@class = "form-control mx-3", @placeholder = "Enter Admin Code here"}})
                                }
                            }
                        </div>
                        <div class="col-xs-12 text-danger">
                            @Html.ValidationMessageFor(model => model.AuthorCode)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 font-14">

                            <div class="checkbox checkbox-primary pull-left p-t-0">
                                <input id="checkbox-signup" name="Remember" type="checkbox">
                                <label for="checkbox-signup"> Remember me? </label>

                                @*@Html.CheckBoxFor(model => model.Remember)
                                @Html.LabelFor(model => model.Remember)*@

                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-15">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

